<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:UserRegitration.Controls"
    x:Class="UserRegitration.LoginPage"
    Title="Login">

    <Grid>

        <StackLayout Padding="30" Spacing="20" HorizontalOptions="Fill" VerticalOptions="Center">
                
                <Label Text="Login" FontSize="24" HorizontalOptions="Center" />

                <Entry x:Name="Email"
                       Placeholder="Email"
                       Keyboard="Email" />

                <Entry x:Name="Password"
                       Placeholder="Password"
                       IsPassword="True" />

                <Button x:Name="Login"
                        Text="Login"
                        Clicked="LoginClicked"
                        BackgroundColor="#2196F3"
                        TextColor="White" />

                <Button Text="Register"
                        Clicked="RegisterClicked"/>
        </StackLayout>

        <views:LoadingOverlay x:Name="LoadingOverlay"/>

    </Grid>

</ContentPage>
